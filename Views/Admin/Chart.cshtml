@{
    ViewBag.Title = "Chart";
}


<script src="~/Scripts/Chart.js"></script>
<script src="~/Scripts/Chart.min.js"></script>
<script src="~/Scripts/jquery-1.9.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script>
    $(function () {
        var ctx = $("#my_canvas").get(0).getContext("2d");
        
        var data = [
            {
                value: parseInt(@ViewBag.a),
                color: "cornflowerblue",
                highlight: "lightskyblue",
                label: "DEALS"
            },
            {
                value: parseInt(@ViewBag.b),
                color: "lightgreen",
                highlight: "YellowGreen",
                label: "PIZZA"
            },
            {
                value: parseInt(@ViewBag.c),
                color: "orange",
                highlight: "darkorange",
                label: "BURGERS"
            }
        ];

        var p = new Chart(ctx).Pie(data);
    });
</script>
 @Html.Partial("_TwinAdminHeader");
<h2 style="text-align:center">Chart</h2>
<canvas style="margin-left:100px;margin-top:200px"id="my_canvas" width="500" height="500">

</canvas>
