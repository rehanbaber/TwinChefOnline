<script>
    $(function () {
        $("#EmailSubmit").click(function () {
            
            if (/^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test($("#useremail").val())) {
                $("#first").hide("slow");
                jQuery.getJSON("/Home/EmailsCheck", {"name":$("#useremail").val()}, function (successResult) {
                    if (successResult == true) {
                        $("#second").html("Thanku For Subscribing to TwinChefOnline!");
                        //alert("Good");
                    }
                    else {
                        $("#second").html("You Are Already Subscribed To TwinChefOnline");
                        //alert("Bad");
                    }
                });
            }
            else {
                $("#second1").html("Invalid Email");
            }
                
            
        });
    });
</script>
