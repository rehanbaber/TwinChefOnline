      <div class="input-group" id="first">
          <input id="useremail" type="text" class="form-control" placeholder="Enter Email Here...">
          <div class="btn-group">
              <button style="width: 150px; background-color:#32CD32; color:white; font-size:x-large" id="EmailSubmit" type="button" class="btn btn-default">Submit</button>
          </div>
      </div>
